---
layout: compress
---
{
    {% assign i = 0 %}
    {% for post in site.posts %}
    {% assign author = site.authors[post.author] %}
    "{{i}}":{
    "doc":"{{ post.url | slugify }}",
    "title": {{ post.title | jsonify }},
    "author": {{ author.display_name | jsonify }},
    "relUrl": {{ post.url | jsonify }},
    "category": {{ post.category | jsonify }},
    "tags":{{post.tags|jsonify}}
    }
    {% unless forloop.last %}
    {% assign i = i | plus: 1 %}
    ,
    {% endunless %}
  {% endfor %}
}